{% extends 'base.html.twig' %}

{% block title %}{{ blade.name }} | {{ parent() }}{% endblock %}

{% block body %}
	<h2>{{ blade.name }}</h2>

	{% include 'blade/form.html.twig' with {'form': form} %}

	<ul class="list-inline float-right">
		<li class="list-inline-item">
			<a href="{{ path('blade_index') }}" class="btn btn-light"><i class="fa fa-list"></i></a>
		</li>
		<li class="list-inline-item">
			{{ form_start(delete_form) }}
				<button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i></button>
			{{ form_end(delete_form) }}
		</li>
	</ul>
{% endblock %}

{% block javascripts %}
		<script src="{{ asset('js/ajaxify.js') }}"></script>
		<script src="{{ asset('js/collection_adder.js') }}"></script>
		<script src="{{ asset('js/entity_adder.js') }}"></script>
{% endblock %}