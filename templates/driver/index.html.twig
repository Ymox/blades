{% extends 'base.html.twig' %}

{% block title %}{{ 'driver.index.title'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
	<h2>{{ 'driver.index.heading'|trans }}</h2>

	<table class="table table-sm table-hover">
		<thead>
			<tr>
				<th>{{ 'driver.fields.name'|trans }}</th>
				<th>{{ 'driver.fields.blades'|trans }}</th>
				<th><a href="{{ path('driver_new') }}" class="btn btn-sm btn-success"><i class="fa fa-plus-circle"></i></a></th>
			</tr>
		</thead>
		<tbody>
		{% for driver in drivers %}
			<tr>
				<td>{{ driver.name }}</td>
				<td>{{ driver.blades|length }}</td>
				<td><a href="{{ path('driver_show', { 'id': driver.id }) }}" class="btn btn-sm btn-outline-info"><i class="fa fa-eye"></i></a>
					<a href="{{ path('driver_edit', { 'id': driver.id }) }}" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil"></i></a></td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}